{
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["esnext"],
    "target": "esnext",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"]
}
